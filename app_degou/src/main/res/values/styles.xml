<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Base Navi RelativeLayout -->
    <style name="BaseNaviRL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_nav_height</item>
        <item name="android:background">@color/base_navi_bg</item>
    </style>

    <!-- Base Navi Back Btn -->
    <style name="BaseNaviBackBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/x40</item>
        <item name="android:paddingRight">@dimen/x50</item>
        <item name="android:src">@mipmap/ic_btn_back</item>
        <item name="android:background">@drawable/sel_base_back_btn</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Base Navi Right Btn -->
    <style name="BaseNaviRightBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/x25</item>
        <item name="android:paddingRight">@dimen/x25</item>
        <item name="android:background">@drawable/sel_base_back_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_7</item>
    </style>

    <!-- Base Navi Title Txt -->
    <style name="BaseNaviTitleTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_11</item>
    </style>

    <!-- Base PullToRefreshListView -->
    <style name="BasePullListView">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@color/lineBg</item>
        <item name="android:dividerHeight">@dimen/y1</item>
        <item name="android:listSelector">@drawable/sel_base_pull_listview</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- Line Style -->
    <style name="BaseLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/lineBg</item>
    </style>

    <style name="BaseLineVertical">
        <item name="android:layout_width">@dimen/y1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lineBg</item>
    </style>

    <!-- Login Style -->

    <!-- Login Input Editor -->
    <style name="LoginInputEdt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/base_padding</item>
        <item name="android:paddingBottom">@dimen/base_padding</item>
        <item name="android:textSize">@dimen/txt_size_9</item>
        <item name="android:textColor">@color/login_input_edt</item>
        <item name="android:background">@null</item>
    </style>

    <style name="LoginLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y2</item>
        <item name="android:background">@color/login_line</item>
    </style>

    <style name="LoginHintTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_6</item>
        <item name="android:textColor">@color/login_input_edt</item>
    </style>

    <style name="LoginBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/base_padding</item>
        <item name="android:paddingBottom">@dimen/base_padding</item>
        <item name="android:textSize">@dimen/txt_size_9</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/sel_login_btn</item>
    </style>

    <!-- Main Tabbar -->

    <!-- Main Tabbar RB -->
    <style name="MainTabbarRB">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/main_tabbar_txt_normal</item>
        <item name="android:textSize">@dimen/txt_size_6</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
