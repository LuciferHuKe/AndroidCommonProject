<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
    </style>

    <!-- Base Navi RelativeLayout -->
    <style name="BaseNaviRL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_nav_height</item>
        <item name="android:background">@color/base_navi_bg</item>
    </style>

    <!-- Base Navi Back Btn -->
    <style name="BaseNaviBackBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/x40</item>
        <item name="android:paddingRight">@dimen/x50</item>
        <item name="android:src">@mipmap/ic_btn_back</item>
        <item name="android:background">@drawable/sel_base_back_btn</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Base Navi Right Btn -->
    <style name="BaseNaviRightBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/x25</item>
        <item name="android:paddingRight">@dimen/x25</item>
        <item name="android:background">@drawable/sel_base_back_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_7</item>
    </style>

    <!-- Base Navi Title Txt -->
    <style name="BaseNaviTitleTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_11</item>
    </style>

    <style name="BasePullItemLY">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/x25</item>
        <item name="android:background">@drawable/sel_base_pull_listview</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BaseTitleTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_9</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BaseHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/lineBg</item>
    </style>

    <style name="BaseVerticalLine">
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lineBg</item>
    </style>

</resources>
